<% content_for :head do %>
  <%= javascript_include_tag "FloatLayer"%>
  <script type="text/javascript">
    $(function(){
      var form = $(".form");
      var templete = form.find(".templete:last");
      var add_templete = function(){
        var add = templete.clone().show();
        templete.before(add);
        add_events(add);
        var next_templete =form.find(".templete:last:prev");
        var next_id=next_templete.find(".me")[0].id
        next_templete.find(".me")[0].setAttribute("id",parseInt(next_id)+1);
      }

      var add_events = function(el){
        el.find("input,select").one("change",function(){
          el.attr("class" ,"create");
          if(!form.find(".templete:visible").length)
            add_templete();
        });
        el.find(".add").click(function(){
          add_templete();
          this.blur();
          return false;
        });

        el.find(".delete").click(function(){
          //删除已有记录 删除无用记录
          el.remove();
          return false;
        });
      }
      form.find(".templete,.create").not(templete).each(function(){
        add_events($(this));
      });

    });

  </script>
  <style type="text/css">
    .form .add,.form .delete{
      float:right;
      margin-right: 30px;
      display:inline;
    }
    .form .templete .delete{
      display:none;
    }
    .form .add{
      display:none;
    }
    .form .templete .add{
      display:block;
    }

  </style>


<% end %>


