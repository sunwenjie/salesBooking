function format_to_machine_number(str){
   str += '';
    str = str.replace(/[^\d\.\,\-]/g,"");
    if(/^-?(?:\d+|\d{1,3}(?:,\d{3})*)(?:\.\d+)?/.test(str)){
      str = str.replace(/,/g,"").replace(/^0+/g,"0").replace(/^0(\d)/g, "$1");
      str = Math.round( parseFloat(str) * 100 )/ 100 + "";
      return str;
    }else{
      return str
    }
}




